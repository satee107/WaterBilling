<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.ammulu.waterbilling.ReportsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="#000089"
        android:padding="20dp"
        android:gravity="center"
        android:text="Globalm Meter Billing System"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        style="@style/spinner_style"
        android:entries="@array/months">
    </Spinner>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/newsurveyll"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:text="Bills Raised"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2.0"
                android:layout_marginTop="40dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Cons :"
                android:textColor="#fff"
               android:layout_weight="0.75"
                android:textSize="15dp"
                android:textStyle="bold|italic" />
                <TextView
                    android:id="@+id/totalcons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:layout_weight="1.25"
                    android:textColor="#fff"
                    android:textSize="15dp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                android:weightSum="2.0">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:text="Billed :"
                    android:textColor="#fff"
                    android:textSize="15dp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/billed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.25"
                    android:text="5"
                    android:textColor="#fff"
                    android:textSize="15dp"
                    android:textStyle="bold|italic" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2.0"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UnBilled :"
                android:layout_weight="0.75"
                android:textColor="#fff"
                android:textSize="15dp"
                android:textStyle="bold|italic" />
                <TextView
                    android:id="@+id/unbilled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2000"
                    android:layout_weight="1.25"
                    android:textColor="#fff"
                    android:textSize="15dp"
                    android:textStyle="bold|italic" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2.0"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Demand :"
                android:textColor="#fff"
                android:textSize="15dp"
                android:layout_weight="0.75"
                android:textStyle="bold|italic" />
                <TextView
                    android:id="@+id/demand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5000"
                    android:layout_weight="1.25"
                    android:textColor="#fff"
                    android:textSize="15dp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/updatesurveyll"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="#55f"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:text="Bills Collected"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:weightSum="2.0">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:text="Bills Paid :"
                    android:textColor="#fff"
                    android:textSize="15dp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/billpaid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.25"
                    android:text="3"
                    android:textColor="#fff"
                    android:textSize="15dp"
                    android:textStyle="bold|italic" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:weightSum="2.0">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unpaid :"
                android:textColor="#fff"
                android:layout_weight="0.75"
                android:textSize="15dp"
                android:textStyle="bold|italic" />
                <TextView
                    android:id="@+id/unpaid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:layout_weight="1.25"
                    android:textColor="#fff"
                    android:textSize="15dp"
                    android:textStyle="bold|italic" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:weightSum="2.0">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Collection :"
                android:textColor="#fff"
                android:layout_weight="0.75"
                android:textSize="15dp"
                android:textStyle="bold|italic" />
                <TextView
                    android:id="@+id/collection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3000"
                    android:layout_weight="1.25"
                    android:textColor="#fff"
                    android:textSize="15dp"
                    android:textStyle="bold|italic" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/b3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btnred"
        android:text="Back"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:textStyle="bold" />


</LinearLayout>
